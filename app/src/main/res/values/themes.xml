<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Metod_Konfigyrati" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chartViewStyle">@style/DefaultChartViewStyle</item>
    </style>
    <style name="DefaultChartViewStyle">
        <item name="gridColor">#C4C5C3</item>
        <item name="pointColor">#000000</item>
        <item name="lineColor">@color/green</item>
        <item name="AxisColor">#000000</item>
        <item name="AxisLabelColor">#000000</item>
        <item name="pointLegendColor">#000000</item>
    </style>
</resources>